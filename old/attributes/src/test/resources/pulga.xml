<pulga>
	<component	role= "br.com.ibnetwork.xingu.attributes.AttributeTypeManager"
             	class="br.com.ibnetwork.xingu.attributes.impl.AttributeTypeManagerImpl">
    	<attributeTypes>
			<attributeType name="ID" 		type="Long" />
			<attributeType name="GENDER" 	type="Character"/>
			<attributeType name="ADDRESS" 	type="Integer"/>
			<attributeType name="ZIP" 		type="Double"/>
			<attributeType name="BIRTH" 	type="Date"/>
			<attributeType name="DATE" 		type="Date"/>
			<attributeType name="MALE" 		type="Boolean"/>
			<attributeType name="CELFONE" 	type="Boolean"/>
		</attributeTypes>
	</component>

	<component	key="db"
				default="true"
				role= "br.com.ibnetwork.xingu.attributes.AttributeListManager"
	           	class="br.com.ibnetwork.xingu.attributes.impl.IbatisAttributeListManager">
	</component>

	<component	key="xml"
				role= "br.com.ibnetwork.xingu.attributes.AttributeListManager"
             	class="br.com.ibnetwork.xingu.attributes.impl.xml.AttributeListManagerXML">

		<!-- {0} = list id -->
		<fileName format="attrList-{0}.xml" locale-language="pt" locale-country="BR"/>
		
		<!-- sub directories are considered group names-->
		<groups groupName="default" 
			baseDir="${pom.build.testOutputDirectory}/repo/default"/>
		<groups groupName="group1" 
			baseDir="${pom.build.testOutputDirectory}/repo/group1"/>
	</component>

	<component	role= "br.com.ibnetwork.xingu.idgenerator.IdGeneratorBroker"
       			class="br.com.ibnetwork.xingu.idgenerator.impl.IdGeneratorBrokerImpl">
		<factories>
			<factory	id="jdbc"
						generatorClass="br.com.ibnetwork.xingu.idgenerator.impl.JDBCLongGenerator">
				<configuration grabSize="1">
					<database	username="sa" 
								passwd="" 
								table="ID_TABLE"
								driverClassName="org.hsqldb.jdbcDriver"
								url="jdbc:hsqldb:${pom.build.testOutputDirectory}/database"
								maxIdle="8"
								maxWait="5000"
								maxActive="8"/>
				</configuration>
			</factory>
			
		</factories>
		<generators>
			<generator id="default" factoryId="jdbc">
				<configuration>
					<initialize tableName="default"/>
				</configuration>
			</generator>
			<generator id="attribute-list" factoryId="jdbc">
				<configuration>
					<initialize tableName="attribute-list" updateWhenInsane="true"/>
				</configuration>
			</generator>
			
		</generators>
	</component>
</pulga>
