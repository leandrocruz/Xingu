<?xml version="1.0" encoding="ISO-8859-1" ?>

<pulga>
	<component	key="groovy"
				role="br.com.ibnetwork.xingu.template.TemplateEngine"
				class="br.com.ibnetwork.xingu.template.impl.groovy.GroovyTemplateEngine">
		<!-- loaded from classpath -->
		<templates extension=".gtl">
			<root>${pom.build.testOutputDirectory}/templates/groovy/app</root>
			<onError template="screens.Error"/>
		</templates>
		<encoding name="ISO-8859-1"/>
	</component>
	<component	key="velocity"
				role="br.com.ibnetwork.xingu.template.TemplateEngine"
				class="br.com.ibnetwork.xingu.template.impl.velocity.VelocityTemplateEngine">
		<!-- loaded from classpath -->
		<templates extension=".vm"/>
		<encoding name="ISO-8859-1"/>
		<file name="velocity.properties"/>
	</component>
	<component 	key="freemarker"
				role="br.com.ibnetwork.xingu.template.TemplateEngine"
				class="br.com.ibnetwork.xingu.template.impl.freemarker.FreemarkerTemplateEngine">
		<!-- loaded from classpath -->
		<templates extension=".ftl"/>
		<encoding name="ISO-8859-1"/>
		<file name="freemarker.properties"/>
	</component>
	<component	role="br.com.ibnetwork.xingu.template.TemplateEngine"
				class="br.com.ibnetwork.xingu.template.impl.TemplateEngineImpl">
		<delegates>
			<delegate key="velocity"/>
			<delegate key="freemarker"/>
			<delegate key="groovy"/>
		</delegates>
	</component>
</pulga>